# meta description: –ü–∞—Ä—Å–∏–Ω–≥ —Ü–µ–Ω –∏–∑ @DurovKursBot (–∏—Å–ø—Ä–∞–≤–ª–µ–Ω–Ω—ã–π –ø–æ–¥ —Ñ–æ—Ä–º–∞—Ç –æ—Ç–≤–µ—Ç–∞)
# scope: hikka_only
# scope: hikka_min 1.6.0

import asyncio
import time
import re
from datetime import datetime, timedelta
from .. import loader, utils
import logging

logger = logging.getLogger(__name__)

@loader.tds
class DurovKursParserFixed(loader.Module):
    """–ü–∞—Ä—Å–∏–Ω–≥ —Ü–µ–Ω –∏–∑ @DurovKursBot (–∏—Å–ø—Ä–∞–≤–ª–µ–Ω–Ω—ã–π –ø–æ–¥ —Ä–µ–∞–ª—å–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç)"""
    
    strings = {
        "name": "DurovParserFixed",
        "started": "‚úÖ <b>–ü–∞—Ä—Å–µ—Ä –∑–∞–ø—É—â–µ–Ω!</b>\nü§ñ –ë–æ—Ç: @DurovKursBot\nüì¢ –ö–∞–Ω–∞–ª: @priceDollarTon\n‚è± –ò–Ω—Ç–µ—Ä–≤–∞–ª: 3 –º–∏–Ω\nüìä –§–æ—Ä–º–∞—Ç: –ö–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—è",
        "stopped": "‚èπÔ∏è <b>–ü–∞—Ä—Å–µ—Ä –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω</b>",
        "already_running": "‚ö†Ô∏è <b>–ü–∞—Ä—Å–µ—Ä —É–∂–µ —Ä–∞–±–æ—Ç–∞–µ—Ç</b>",
        "not_running": "üì≠ <b>–ü–∞—Ä—Å–µ—Ä –Ω–µ –∑–∞–ø—É—â–µ–Ω</b>",
        "test_sent": "üì§ <b>–¢–µ—Å—Ç–æ–≤—ã–π –ø–æ—Å—Ç –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω</b>",
        "status": "üîÑ <b>–°—Ç–∞—Ç—É—Å:</b> {}\n‚è∞ <b>–ü–æ—Å–ª–µ–¥–Ω–µ–µ:</b> {}\nüíµ <b>USD:</b> {}‚ÇΩ\nüíé <b>TON:</b> {}‚ÇΩ",
        "error": "‚ùå <b>–û—à–∏–±–∫–∞:</b> {}",
        "requesting": "üì® –ó–∞–ø—Ä–∞—à–∏–≤–∞—é –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—é...",
        "parsing": "üîç –ü–∞—Ä—Å–∏–Ω–≥ –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏...",
        "parsed_success": "‚úÖ –î–∞–Ω–Ω—ã–µ –ø–æ–ª—É—á–µ–Ω—ã",
        "no_data": "–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö",
        "bot_not_responding": "‚ùå @DurovKursBot –Ω–µ –æ—Ç–≤–µ—á–∞–µ—Ç"
    }
    
    def __init__(self):
        self.task = None
        self.is_running = False
        self.last_update = None
        self.last_usd_price = None
        self.last_ton_price = None
        self.source_bot = "@DurovKursBot"
        self.target_channel = "@priceDollarTon"
        
    async def client_ready(self, client, db):
        self.client = client
        self.db = db
        logger.info("DurovKursParserFixed –∑–∞–≥—Ä—É–∂–µ–Ω")
    
    @loader.command(
        ru_doc="–ó–∞–ø—É—Å—Ç–∏—Ç—å –ø–∞—Ä—Å–∏–Ω–≥ –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏",
        en_doc="Start parsing conversion"
    )
    async def startdurovfixed(self, message):
        """–ó–∞–ø—É—Å—Ç–∏—Ç—å –ø–∞—Ä—Å–∏–Ω–≥"""
        if self.is_running:
            await utils.answer(message, self.strings("already_running"))
            return
        
        self.is_running = True
        self.task = asyncio.create_task(self._parsing_loop())
        
        await utils.answer(message, self.strings("started"))
        logger.info("–ü–∞—Ä—Å–µ—Ä –∑–∞–ø—É—â–µ–Ω (–∏—Å–ø—Ä–∞–≤–ª–µ–Ω–Ω—ã–π)")
    
    @loader.command(
        ru_doc="–û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –ø–∞—Ä—Å–∏–Ω–≥",
        en_doc="Stop parsing"
    )
    async def stopdurovfixed(self, message):
        """–û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –ø–∞—Ä—Å–∏–Ω–≥"""
        if not self.is_running:
            await utils.answer(message, self.strings("not_running"))
            return
        
        self.is_running = False
        if self.task:
            self.task.cancel()
            self.task = None
        
        await utils.answer(message, self.strings("stopped"))
        logger.info("–ü–∞—Ä—Å–µ—Ä –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω")
    
    @loader.command(
        ru_doc="–¢–µ—Å—Ç–æ–≤—ã–π –∑–∞–ø—Ä–æ—Å –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏",
        en_doc="Test conversion request"
    )
    async def testdurovfixed(self, message):
        """–¢–µ—Å—Ç–æ–≤—ã–π –ø–∞—Ä—Å–∏–Ω–≥"""
        await utils.answer(message, self.strings("requesting"))
        
        try:
            usd_price, ton_price = await self._get_prices_from_conversion()
            
            if usd_price and ton_price:
                post = self._format_post(usd_price, ton_price)
                
                # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –≤ –∫–∞–Ω–∞–ª
                await self.client.send_message(
                    self.target_channel,
                    post,
                    parse_mode='HTML'
                )
                
                # –°–æ—Ö—Ä–∞–Ω—è–µ–º –¥–∞–Ω–Ω—ã–µ
                self.last_usd_price = usd_price
                self.last_ton_price = ton_price
                self.last_update = time.time()
                
                await utils.answer(message, self.strings("test_sent"))
                await message.respond(post, parse_mode='HTML')
            else:
                await utils.answer(message, self.strings("bot_not_responding"))
                
        except Exception as e:
            await utils.answer(message, self.strings("error").format(str(e)))
    
    @loader.command(
        ru_doc="–°—Ç–∞—Ç—É—Å –ø–∞—Ä—Å–µ—Ä–∞",
        en_doc="Parser status"
    )
    async def durovfixedstatus(self, message):
        """–°—Ç–∞—Ç—É—Å"""
        status = "üü¢ –†–∞–±–æ—Ç–∞–µ—Ç" if self.is_running else "üî¥ –û—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω"
        
        last_time = "‚Äî"
        if self.last_update:
            last_time = self._get_msk_time_str(self.last_update)
        
        usd_info = f"{self.last_usd_price:.2f}‚ÇΩ" if self.last_usd_price else self.strings("no_data")
        ton_info = f"{self.last_ton_price:.2f}‚ÇΩ" if self.last_ton_price else self.strings("no_data")
        
        info = self.strings("status").format(status, last_time, usd_info, ton_info)
        await utils.answer(message, info)
    
    @loader.command(
        ru_doc="–ü—Ä–∏–Ω—É–¥–∏—Ç–µ–ª—å–Ω–æ–µ –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ",
        en_doc="Force update"
    )
    async def updatedurovfixed(self, message):
        """–û–±–Ω–æ–≤–∏—Ç—å —Å–µ–π—á–∞—Å"""
        await utils.answer(message, self.strings("requesting"))
        
        try:
            usd_price, ton_price = await self._get_prices_from_conversion()
            
            if usd_price and ton_price:
                post = self._format_post(usd_price, ton_price)
                await message.respond(post, parse_mode='HTML')
                
                # –°–æ—Ö—Ä–∞–Ω—è–µ–º –¥–ª—è —Å—Ç–∞—Ç—É—Å–∞
                self.last_usd_price = usd_price
                self.last_ton_price = ton_price
                self.last_update = time.time()
            else:
                await utils.answer(message, self.strings("bot_not_responding"))
                
        except Exception as e:
            await utils.answer(message, self.strings("error").format(str(e)))
    
    @loader.command(
        ru_doc="–û—Ç–ø—Ä–∞–≤–∏—Ç—å –∫–æ–º–∞–Ω–¥—É –±–æ—Ç—É",
        en_doc="Send command to bot"
    )
    async def sendconversion(self, message):
        """–û—Ç–ø—Ä–∞–≤–∏—Ç—å –∫–æ–º–∞–Ω–¥—É –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏ <—Å—É–º–º–∞> <–≤–∞–ª—é—Ç–∞>"""
        args = utils.get_args(message)
        
        if len(args) < 2:
            await utils.answer(message, "‚ùå –§–æ—Ä–º–∞—Ç: .sendconversion <—Å—É–º–º–∞> <–≤–∞–ª—é—Ç–∞>\n–ü—Ä–∏–º–µ—Ä: .sendconversion 1 USDT")
            return
        
        try:
            amount = args[0]
            currency = args[1].upper()
            
            command = f"{amount} {currency}"
            await self.client.send_message(self.source_bot, command)
            
            await utils.answer(message, f"‚úÖ –û—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ –±–æ—Ç—É: `{command}`")
            
            # –ñ–¥–µ–º –∏ –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –æ—Ç–≤–µ—Ç
            await asyncio.sleep(2)
            messages = await self.client.get_messages(self.source_bot, limit=3)
            
            for msg in messages:
                if msg.text and msg.out is False:
                    await message.respond(f"üì® –û—Ç–≤–µ—Ç –±–æ—Ç–∞:\n```\n{msg.text[:500]}\n```")
                    break
                    
        except Exception as e:
            await utils.answer(message, f"‚ùå –û—à–∏–±–∫–∞: {str(e)}")
    
    async def _parsing_loop(self):
        """–û—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª –ø–∞—Ä—Å–∏–Ω–≥–∞"""
        logger.info("–¶–∏–∫–ª –ø–∞—Ä—Å–∏–Ω–≥–∞ –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏ –∑–∞–ø—É—â–µ–Ω")
        
        while self.is_running:
            try:
                # –ü–æ–ª—É—á–∞–µ–º —Ü–µ–Ω—ã —á–µ—Ä–µ–∑ –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—é
                usd_price, ton_price = await self._get_prices_from_conversion()
                
                if usd_price and ton_price:
                    # –°–æ—Ö—Ä–∞–Ω—è–µ–º –¥–∞–Ω–Ω—ã–µ
                    self.last_usd_price = usd_price
                    self.last_ton_price = ton_price
                    self.last_update = time.time()
                    
                    # –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º –ø–æ—Å—Ç
                    post = self._format_post(usd_price, ton_price)
                    
                    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –≤ –∫–∞–Ω–∞–ª
                    await self.client.send_message(
                        self.target_channel,
                        post,
                        parse_mode='HTML'
                    )
                    
                    logger.info(f"–ü–æ—Å—Ç –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω | USD: {usd_price:.2f}‚ÇΩ, TON: {ton_price:.2f}‚ÇΩ")
                
                # –ñ–¥–µ–º 3 –º–∏–Ω—É—Ç—ã –¥–æ —Å–ª–µ–¥—É—é—â–µ–≥–æ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è
                wait_time = 180  # 3 –º–∏–Ω—É—Ç—ã
                for i in range(wait_time):
                    if not self.is_running:
                        break
                    await asyncio.sleep(1)
                    
            except Exception as e:
                logger.error(f"–û—à–∏–±–∫–∞ –≤ —Ü–∏–∫–ª–µ –ø–∞—Ä—Å–∏–Ω–≥–∞: {e}")
                await asyncio.sleep(30)
    
    async def _get_prices_from_conversion(self):
        """–ü–æ–ª—É—á–µ–Ω–∏–µ —Ü–µ–Ω —á–µ—Ä–µ–∑ –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—é (–Ω–æ–≤—ã–π –º–µ—Ç–æ–¥)"""
        try:
            # –®–∞–≥ 1: –û—Ç–ø—Ä–∞–≤–ª—è–µ–º "1 USDT" –¥–ª—è –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏ –≤ RUB
            await self.client.send_message(self.source_bot, "1 USDT")
            await asyncio.sleep(2)
            
            # –®–∞–≥ 2: –û—Ç–ø—Ä–∞–≤–ª—è–µ–º "1 TON" –¥–ª—è –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏ –≤ RUB
            await self.client.send_message(self.source_bot, "1 TON")
            await asyncio.sleep(2)
            
            # –®–∞–≥ 3: –ü–æ–ª—É—á–∞–µ–º –ø–æ—Å–ª–µ–¥–Ω–∏–µ —Å–æ–æ–±—â–µ–Ω–∏—è
            messages = await self.client.get_messages(self.source_bot, limit=15)
            
            usd_price = None
            ton_price = None
            
            # –ò—â–µ–º –æ—Ç–≤–µ—Ç—ã –≤ —Ñ–æ—Ä–º–∞—Ç–µ "–ö–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—è"
            for msg in reversed(messages):
                if msg.text and msg.out is False:
                    text = msg.text
                    
                    # –ü–∞—Ä—Å–∏–º –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—é USDT ‚Üí RUB
                    if not usd_price and "–ö–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—è 1.0 USDT" in text:
                        usd_price = self._parse_conversion_usd(text)
                    
                    # –ü–∞—Ä—Å–∏–º –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—é TON ‚Üí RUB
                    if not ton_price and "–ö–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—è 1.0 TON" in text:
                        ton_price = self._parse_conversion_ton(text)
                    
                    # –ï—Å–ª–∏ –Ω–∞—à–ª–∏ –æ–±–µ —Ü–µ–Ω—ã, –≤—ã—Ö–æ–¥–∏–º
                    if usd_price and ton_price:
                        break
            
            # –ï—Å–ª–∏ –Ω–µ –Ω–∞—à–ª–∏, –ø—Ä–æ–±—É–µ–º –∞–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–Ω—ã–µ –∫–æ–º–∞–Ω–¥—ã
            if not usd_price or not ton_price:
                await self.client.send_message(self.source_bot, "1 usd")
                await asyncio.sleep(2)
                
                await self.client.send_message(self.source_bot, "1 ton")
                await asyncio.sleep(2)
                
                messages = await self.client.get_messages(self.source_bot, limit=10)
                
                for msg in reversed(messages):
                    if msg.text and msg.out is False:
                        text = msg.text
                        
                        if not usd_price:
                            usd_price = self._parse_conversion_usd(text)
                            if not usd_price:
                                usd_price = self._parse_generic_usd(text)
                        
                        if not ton_price:
                            ton_price = self._parse_conversion_ton(text)
                            if not ton_price:
                                ton_price = self._parse_generic_ton(text)
            
            return usd_price, ton_price
            
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ –ø–æ–ª—É—á–µ–Ω–∏—è –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏: {e}")
            return None, None
    
    def _parse_conversion_usd(self, text):
        """–ü–∞—Ä—Å–∏–Ω–≥ —Ü–µ–Ω—ã USD –∏–∑ —Ñ–æ—Ä–º–∞—Ç–∞ –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏"""
        try:
            # –§–æ—Ä–º–∞—Ç: "–ö–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—è 1.0 USDT: ... RUB : 76.09"
            pattern = r'RUB\s*:\s*([\d]+[.,]\d+)'
            match = re.search(pattern, text, re.IGNORECASE)
            
            if match:
                price_str = match.group(1).replace(',', '.')
                price = float(price_str)
                
                # –ü—Ä–æ–≤–µ—Ä—è–µ–º –¥–∏–∞–ø–∞–∑–æ–Ω
                if 30 <= price <= 150:
                    return round(price, 2)
            
            # –ê–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–Ω—ã–π –ø–∞—Ç—Ç–µ—Ä–Ω
            pattern2 = r'(\d+[.,]\d+)\s*‚ÇΩ.*USDT'
            match = re.search(pattern2, text, re.IGNORECASE)
            
            if match:
                price_str = match.group(1).replace(',', '.')
                price = float(price_str)
                
                if 30 <= price <= 150:
                    return round(price, 2)
            
            return None
            
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ –ø–∞—Ä—Å–∏–Ω–≥–∞ –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏ USD: {e}")
            return None
    
    def _parse_conversion_ton(self, text):
        """–ü–∞—Ä—Å–∏–Ω–≥ —Ü–µ–Ω—ã TON –∏–∑ —Ñ–æ—Ä–º–∞—Ç–∞ –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏"""
        try:
            # –§–æ—Ä–º–∞—Ç: "–ö–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—è 1.0 TON: ... RUB : 119.62"
            pattern = r'RUB\s*:\s*([\d]+[.,]\d+)'
            match = re.search(pattern, text, re.IGNORECASE)
            
            if match:
                price_str = match.group(1).replace(',', '.')
                price = float(price_str)
                
                # –ü—Ä–æ–≤–µ—Ä—è–µ–º –¥–∏–∞–ø–∞–∑–æ–Ω
                if 10 <= price <= 1000:
                    return round(price, 2)
            
            # –ê–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–Ω—ã–π –ø–∞—Ç—Ç–µ—Ä–Ω
            pattern2 = r'(\d+[.,]\d+)\s*‚ÇΩ.*TON'
            match = re.search(pattern2, text, re.IGNORECASE)
            
            if match:
                price_str = match.group(1).replace(',', '.')
                price = float(price_str)
                
                if 10 <= price <= 1000:
                    return round(price, 2)
            
            return None
            
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ –ø–∞—Ä—Å–∏–Ω–≥–∞ –∫–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏–∏ TON: {e}")
            return None
    
    def _parse_generic_usd(self, text):
        """–û–±—â–∏–π –ø–∞—Ä—Å–∏–Ω–≥ USD"""
        try:
            patterns = [
                r'1\s*[Uu][Ss][Dd].*?(\d+[.,]\d+)\s*[‚ÇΩ—Ä—É–±]',
                r'(\d+[.,]\d+)\s*[‚ÇΩ—Ä—É–±].*1\s*[Uu][Ss][Dd]',
                r'[–î–¥]–æ–ª–ª–∞—Ä.*?(\d+[.,]\d+)\s*[‚ÇΩ—Ä—É–±]',
                r'(\d+[.,]\d+)\s*[‚ÇΩ—Ä—É–±].*[–î–¥]–æ–ª–ª–∞—Ä'
            ]
            
            for pattern in patterns:
                match = re.search(pattern, text, re.IGNORECASE)
                if match:
                    price_str = match.group(1).replace(',', '.')
                    price = float(price_str)
                    
                    if 30 <= price <= 150:
                        return round(price, 2)
            
            return None
        except:
            return None
    
    def _parse_generic_ton(self, text):
        """–û–±—â–∏–π –ø–∞—Ä—Å–∏–Ω–≥ TON"""
        try:
            patterns = [
                r'1\s*[T–¢][O–û0][N–ù].*?(\d+[.,]\d+)\s*[‚ÇΩ—Ä—É–±]',
                r'(\d+[.,]\d+)\s*[‚ÇΩ—Ä—É–±].*1\s*[T–¢][O–û0][N–ù]',
                r'[T–¢][O–û0][N–ù].*?(\d+[.,]\d+)\s*[‚ÇΩ—Ä—É–±]',
                r'(\d+[.,]\d+)\s*[‚ÇΩ—Ä—É–±].*[T–¢][O–û0][N–ù]'
            ]
            
            for pattern in patterns:
                match = re.search(pattern, text, re.IGNORECASE)
                if match:
                    price_str = match.group(1).replace(',', '.')
                    price = float(price_str)
                    
                    if 10 <= price <= 1000:
                        return round(price, 2)
            
            return None
        except:
            return None
    
    def _get_msk_time(self):
        """–ü–æ–ª—É—á–µ–Ω–∏–µ –≤—Ä–µ–º–µ–Ω–∏ –ø–æ –ú–°–ö"""
        utc_now = datetime.utcnow()
        msk_time = utc_now + timedelta(hours=3)
        return msk_time
    
    def _get_msk_time_str(self, timestamp=None):
        """–§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –≤—Ä–µ–º–µ–Ω–∏ –ú–°–ö"""
        if timestamp:
            utc_time = datetime.utcfromtimestamp(timestamp)
            msk_time = utc_time + timedelta(hours=3)
        else:
            msk_time = self._get_msk_time()
        
        return msk_time.strftime("%H:%M –ú–°–ö")
    
    def _format_number(self, number):
        """–§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ —á–∏—Å–ª–∞"""
        if isinstance(number, (int, float)):
            if number.is_integer():
                return f"{int(number):,}".replace(",", " ")
            else:
                formatted = f"{number:,.2f}".replace(",", " ").replace(".", ",")
                # –£–±–∏—Ä–∞–µ–º –ª–∏—à–Ω–∏–µ –Ω—É–ª–∏ –µ—Å–ª–∏ –æ–Ω–∏ –µ—Å—Ç—å
                if formatted.endswith(",00"):
                    formatted = formatted[:-3]
                return formatted
        return str(number)
    
    def _format_post(self, usd_price, ton_price):
        """–§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –ø–æ—Å—Ç–∞ –≤ —Ç–æ—á–Ω–æ–º —Ñ–æ—Ä–º–∞—Ç–µ"""
        # –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º —á–∏—Å–ª–∞
        usd_formatted = self._format_number(usd_price)
        ton_formatted = self._format_number(ton_price)
        
        # –ü–æ–ª—É—á–∞–µ–º –≤—Ä–µ–º—è –ú–°–ö
        msk_time = self._get_msk_time_str()
        
        # –§–æ—Ä–º–∏—Ä—É–µ–º –ø–æ—Å—Ç –¢–û–ß–ù–û –≤ —É–∫–∞–∑–∞–Ω–Ω–æ–º —Ñ–æ—Ä–º–∞—Ç–µ
        post = f"üíµ USD: <b>{usd_formatted}‚ÇΩ</b>\n"
        post += f"üíé TON: <b>{ton_formatted}‚ÇΩ</b>\n\n"
        post += f"<i>üïê {msk_time} | @priceDollarTon</i>"
        
        return post
    
    async def on_unload(self):
        """–û—á–∏—Å—Ç–∫–∞ –ø—Ä–∏ –≤—ã–≥—Ä—É–∑–∫–µ"""
        self.is_running = False
        
        if self.task:
            self.task.cancel()
