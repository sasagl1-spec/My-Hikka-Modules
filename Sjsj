# meta developer: @kiminaiq
# meta pic: https://img.icons8.com/color/48/000000/telegram-app.png
# meta description: –ü–∞—Ä—Å–∏–Ω–≥ —Ü–µ–Ω –∏–∑ @DurovKursBot –∏ –ø—É–±–ª–∏–∫–∞—Ü–∏—è –≤ –∫–∞–Ω–∞–ª
# scope: hikka_only
# scope: hikka_min 1.6.0

import asyncio
import time
import re
from datetime import datetime, timedelta
from .. import loader, utils
import logging

logger = logging.getLogger(__name__)

@loader.tds
class DurovKursParser(loader.Module):
    """–ü–∞—Ä—Å–∏–Ω–≥ —Ü–µ–Ω –∏–∑ @DurovKursBot –∏ –ø—É–±–ª–∏–∫–∞—Ü–∏—è –≤ –∫–∞–Ω–∞–ª"""
    
    strings = {
        "name": "DurovKursParser",
        "started": "‚úÖ <b>–ü–∞—Ä—Å–µ—Ä –∑–∞–ø—É—â–µ–Ω!</b>\nü§ñ –ë–æ—Ç: @DurovKursBot\nüì¢ –ö–∞–Ω–∞–ª: @priceDollarTon\n‚è± –ò–Ω—Ç–µ—Ä–≤–∞–ª: 3 –º–∏–Ω",
        "stopped": "‚èπÔ∏è <b>–ü–∞—Ä—Å–µ—Ä –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω</b>",
        "already_running": "‚ö†Ô∏è <b>–ü–∞—Ä—Å–µ—Ä —É–∂–µ —Ä–∞–±–æ—Ç–∞–µ—Ç</b>",
        "not_running": "üì≠ <b>–ü–∞—Ä—Å–µ—Ä –Ω–µ –∑–∞–ø—É—â–µ–Ω</b>",
        "test_sent": "üì§ <b>–¢–µ—Å—Ç–æ–≤—ã–π –ø–æ—Å—Ç –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω</b>",
        "status": "üîÑ <b>–°—Ç–∞—Ç—É—Å:</b> {}\n‚è∞ <b>–ü–æ—Å–ª–µ–¥–Ω–µ–µ:</b> {}\nüíµ <b>USD:</b> {}‚ÇΩ\nüíé <b>TON:</b> {}‚ÇΩ",
        "error": "‚ùå <b>–û—à–∏–±–∫–∞:</b> {}",
        "requesting": "üì® –ó–∞–ø—Ä–∞—à–∏–≤–∞—é —Ü–µ–Ω—ã —É @DurovKursBot...",
        "parsing": "üîç –ü–∞—Ä—Å–∏–Ω–≥ –æ—Ç–≤–µ—Ç–∞...",
        "parsed_success": "‚úÖ –î–∞–Ω–Ω—ã–µ –ø–æ–ª—É—á–µ–Ω—ã",
        "no_data": "–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö",
        "bot_not_responding": "‚ùå @DurovKursBot –Ω–µ –æ—Ç–≤–µ—á–∞–µ—Ç"
    }
    
    def __init__(self):
        self.task = None
        self.is_running = False
        self.last_update = None
        self.last_usd_price = None
        self.last_ton_price = None
        self.source_bot = "@DurovKursBot"
        self.target_channel = "@priceDollarTon"
        
    async def client_ready(self, client, db):
        self.client = client
        self.db = db
        logger.info("DurovKursParser –∑–∞–≥—Ä—É–∂–µ–Ω")
    
    @loader.command(
        ru_doc="–ó–∞–ø—É—Å—Ç–∏—Ç—å –ø–∞—Ä—Å–∏–Ω–≥ –∏–∑ @DurovKursBot",
        en_doc="Start parsing from @DurovKursBot"
    )
    async def startdurovparse(self, message):
        """–ó–∞–ø—É—Å—Ç–∏—Ç—å –ø–∞—Ä—Å–∏–Ω–≥"""
        if self.is_running:
            await utils.answer(message, self.strings("already_running"))
            return
        
        self.is_running = True
        self.task = asyncio.create_task(self._parsing_loop())
        
        await utils.answer(message, self.strings("started"))
        logger.info("–ü–∞—Ä—Å–µ—Ä @DurovKursBot –∑–∞–ø—É—â–µ–Ω")
    
    @loader.command(
        ru_doc="–û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –ø–∞—Ä—Å–∏–Ω–≥",
        en_doc="Stop parsing"
    )
    async def stopdurovparse(self, message):
        """–û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –ø–∞—Ä—Å–∏–Ω–≥"""
        if not self.is_running:
            await utils.answer(message, self.strings("not_running"))
            return
        
        self.is_running = False
        if self.task:
            self.task.cancel()
            self.task = None
        
        await utils.answer(message, self.strings("stopped"))
        logger.info("–ü–∞—Ä—Å–µ—Ä @DurovKursBot –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω")
    
    @loader.command(
        ru_doc="–¢–µ—Å—Ç–æ–≤—ã–π –∑–∞–ø—Ä–æ—Å –∏ –ø–æ—Å—Ç",
        en_doc="Test request and post"
    )
    async def testdurovparse(self, message):
        """–¢–µ—Å—Ç–æ–≤—ã–π –ø–∞—Ä—Å–∏–Ω–≥"""
        await utils.answer(message, self.strings("requesting"))
        
        try:
            usd_price, ton_price = await self._get_prices_from_bot()
            
            if usd_price and ton_price:
                post = self._format_post(usd_price, ton_price)
                
                # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –≤ –∫–∞–Ω–∞–ª
                await self.client.send_message(
                    self.target_channel,
                    post,
                    parse_mode='HTML'
                )
                
                # –°–æ—Ö—Ä–∞–Ω—è–µ–º –¥–∞–Ω–Ω—ã–µ
                self.last_usd_price = usd_price
                self.last_ton_price = ton_price
                self.last_update = time.time()
                
                await utils.answer(message, self.strings("test_sent"))
                await message.respond(post, parse_mode='HTML')
            else:
                await utils.answer(message, self.strings("bot_not_responding"))
                
        except Exception as e:
            await utils.answer(message, self.strings("error").format(str(e)))
    
    @loader.command(
        ru_doc="–°—Ç–∞—Ç—É—Å –ø–∞—Ä—Å–µ—Ä–∞",
        en_doc="Parser status"
    )
    async def durovstatus(self, message):
        """–°—Ç–∞—Ç—É—Å"""
        status = "üü¢ –†–∞–±–æ—Ç–∞–µ—Ç" if self.is_running else "üî¥ –û—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω"
        
        last_time = "‚Äî"
        if self.last_update:
            last_time = self._get_msk_time_str(self.last_update)
        
        usd_info = f"{self.last_usd_price:.2f}‚ÇΩ" if self.last_usd_price else self.strings("no_data")
        ton_info = f"{self.last_ton_price:.2f}‚ÇΩ" if self.last_ton_price else self.strings("no_data")
        
        info = self.strings("status").format(status, last_time, usd_info, ton_info)
        await utils.answer(message, info)
    
    @loader.command(
        ru_doc="–ü—Ä–∏–Ω—É–¥–∏—Ç–µ–ª—å–Ω–æ–µ –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ",
        en_doc="Force update"
    )
    async def updatedurov(self, message):
        """–û–±–Ω–æ–≤–∏—Ç—å —Å–µ–π—á–∞—Å"""
        await utils.answer(message, self.strings("requesting"))
        
        try:
            usd_price, ton_price = await self._get_prices_from_bot()
            
            if usd_price and ton_price:
                post = self._format_post(usd_price, ton_price)
                await message.respond(post, parse_mode='HTML')
                
                # –°–æ—Ö—Ä–∞–Ω—è–µ–º –¥–ª—è —Å—Ç–∞—Ç—É—Å–∞
                self.last_usd_price = usd_price
                self.last_ton_price = ton_price
                self.last_update = time.time()
            else:
                await utils.answer(message, self.strings("bot_not_responding"))
                
        except Exception as e:
            await utils.answer(message, self.strings("error").format(str(e)))
    
    @loader.command(
        ru_doc="–†—É—á–Ω–∞—è –æ—Ç–ø—Ä–∞–≤–∫–∞ —Å–æ–æ–±—â–µ–Ω–∏–π –±–æ—Ç—É",
        en_doc="Manual bot messages"
    )
    async def sendtobot(self, message):
        """–û—Ç–ø—Ä–∞–≤–∏—Ç—å —Å–æ–æ–±—â–µ–Ω–∏–µ –±–æ—Ç—É <—Ç–µ–∫—Å—Ç>"""
        args = utils.get_args_raw(message)
        
        if not args:
            await utils.answer(message, "‚ùå –£–∫–∞–∂–∏—Ç–µ —Ç–µ–∫—Å—Ç –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏")
            return
        
        try:
            await self.client.send_message(self.source_bot, args)
            await utils.answer(message, f"‚úÖ –°–æ–æ–±—â–µ–Ω–∏–µ –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–æ –±–æ—Ç—É:\n`{args}`")
        except Exception as e:
            await utils.answer(message, f"‚ùå –û—à–∏–±–∫–∞: {str(e)}")
    
    async def _parsing_loop(self):
        """–û—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª –ø–∞—Ä—Å–∏–Ω–≥–∞"""
        logger.info("–¶–∏–∫–ª –ø–∞—Ä—Å–∏–Ω–≥–∞ @DurovKursBot –∑–∞–ø—É—â–µ–Ω")
        
        while self.is_running:
            try:
                # –ü–æ–ª—É—á–∞–µ–º —Ü–µ–Ω—ã –æ—Ç –±–æ—Ç–∞
                usd_price, ton_price = await self._get_prices_from_bot()
                
                if usd_price and ton_price:
                    # –°–æ—Ö—Ä–∞–Ω—è–µ–º –¥–∞–Ω–Ω—ã–µ
                    self.last_usd_price = usd_price
                    self.last_ton_price = ton_price
                    self.last_update = time.time()
                    
                    # –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º –ø–æ—Å—Ç
                    post = self._format_post(usd_price, ton_price)
                    
                    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –≤ –∫–∞–Ω–∞–ª
                    await self.client.send_message(
                        self.target_channel,
                        post,
                        parse_mode='HTML'
                    )
                    
                    logger.info(f"–ü–æ—Å—Ç –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω | USD: {usd_price:.2f}‚ÇΩ, TON: {ton_price:.2f}‚ÇΩ")
                
                # –ñ–¥–µ–º 3 –º–∏–Ω—É—Ç—ã –¥–æ —Å–ª–µ–¥—É—é—â–µ–≥–æ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è
                wait_time = 180  # 3 –º–∏–Ω—É—Ç—ã
                for i in range(wait_time):
                    if not self.is_running:
                        break
                    await asyncio.sleep(1)
                    
            except Exception as e:
                logger.error(f"–û—à–∏–±–∫–∞ –≤ —Ü–∏–∫–ª–µ –ø–∞—Ä—Å–∏–Ω–≥–∞: {e}")
                await asyncio.sleep(30)  # –ñ–¥–µ–º –ø–µ—Ä–µ–¥ –ø–æ–≤—Ç–æ—Ä–Ω–æ–π –ø–æ–ø—ã—Ç–∫–æ–π
    
    async def _get_prices_from_bot(self):
        """–ü–æ–ª—É—á–µ–Ω–∏–µ —Ü–µ–Ω –æ—Ç @DurovKursBot"""
        try:
            # –®–∞–≥ 1: –û—Ç–ø—Ä–∞–≤–ª—è–µ–º "1$" –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è –∫—É—Ä—Å–∞ USD
            await self.client.send_message(self.source_bot, "1$")
            await asyncio.sleep(2)
            
            # –®–∞–≥ 2: –û—Ç–ø—Ä–∞–≤–ª—è–µ–º "1—Ç" –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è –∫—É—Ä—Å–∞ TON
            await self.client.send_message(self.source_bot, "1—Ç")
            await asyncio.sleep(2)
            
            # –®–∞–≥ 3: –ü–æ–ª—É—á–∞–µ–º –ø–æ—Å–ª–µ–¥–Ω–∏–µ —Å–æ–æ–±—â–µ–Ω–∏—è –æ—Ç –±–æ—Ç–∞
            messages = await self.client.get_messages(self.source_bot, limit=10)
            
            usd_price = None
            ton_price = None
            
            # –ü–∞—Ä—Å–∏–º –æ—Ç–≤–µ—Ç—ã –≤ –æ–±—Ä–∞—Ç–Ω–æ–º –ø–æ—Ä—è–¥–∫–µ (–æ—Ç –Ω–æ–≤—ã—Ö –∫ —Å—Ç–∞—Ä—ã–º)
            for msg in reversed(messages):
                if msg.text and msg.out is False:  # –¢–æ–ª—å–∫–æ –≤—Ö–æ–¥—è—â–∏–µ —Å–æ–æ–±—â–µ–Ω–∏—è
                    # –ü–∞—Ä—Å–∏–º USD
                    if not usd_price:
                        usd_price = self._parse_usd_response(msg.text)
                    
                    # –ü–∞—Ä—Å–∏–º TON
                    if not ton_price:
                        ton_price = self._parse_ton_response(msg.text)
                    
                    # –ï—Å–ª–∏ –Ω–∞—à–ª–∏ –æ–±–µ —Ü–µ–Ω—ã, –≤—ã—Ö–æ–¥–∏–º
                    if usd_price and ton_price:
                        break
            
            # –ï—Å–ª–∏ –Ω–µ –Ω–∞—à–ª–∏ –≤ –ø–æ—Å–ª–µ–¥–Ω–∏—Ö —Å–æ–æ–±—â–µ–Ω–∏—è—Ö, –ø—Ä–æ–±—É–µ–º —Å–Ω–æ–≤–∞
            if not usd_price or not ton_price:
                # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –∫–æ–º–∞–Ω–¥—ã –µ—â–µ —Ä–∞–∑
                await self.client.send_message(self.source_bot, "–∫—É—Ä—Å –¥–æ–ª–ª–∞—Ä–∞")
                await asyncio.sleep(2)
                
                await self.client.send_message(self.source_bot, "–∫—É—Ä—Å —Ç–æ–Ω")
                await asyncio.sleep(2)
                
                # –°–Ω–æ–≤–∞ –ø–æ–ª—É—á–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏—è
                messages = await self.client.get_messages(self.source_bot, limit=10)
                
                for msg in reversed(messages):
                    if msg.text and msg.out is False:
                        if not usd_price:
                            usd_price = self._parse_usd_response(msg.text)
                        if not ton_price:
                            ton_price = self._parse_ton_response(msg.text)
            
            return usd_price, ton_price
            
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ –ø–æ–ª—É—á–µ–Ω–∏—è —Ü–µ–Ω –æ—Ç –±–æ—Ç–∞: {e}")
            return None, None
    
    def _parse_usd_response(self, text):
        """–ü–∞—Ä—Å–∏–Ω–≥ –æ—Ç–≤–µ—Ç–∞ –ø–æ USD"""
        try:
            # –ü–∞—Ç—Ç–µ—Ä–Ω—ã –¥–ª—è –ø–æ–∏—Å–∫–∞ —Ü–µ–Ω—ã USD –≤ –æ—Ç–≤–µ—Ç–µ –±–æ—Ç–∞
            patterns = [
                r'(\d+[.,]\d+)\s*‚ÇΩ.*[–¥–î]–æ–ª–ª–∞—Ä',
                r'[–¥–î]–æ–ª–ª–∞—Ä.*(\d+[.,]\d+)\s*‚ÇΩ',
                r'USD.*(\d+[.,]\d+)\s*‚ÇΩ',
                r'(\d+[.,]\d+)\s*‚ÇΩ.*USD',
                r'1\s*\$.*?(\d+[.,]\d+)\s*‚ÇΩ',
                r'–∫—É—Ä—Å.*–¥–æ–ª–ª–∞—Ä.*(\d+[.,]\d+)',
                r'\$1.*?(\d+[.,]\d+)\s*—Ä—É–±',
                # –î–ª—è –æ—Ç–≤–µ—Ç–æ–≤ —Ç–∏–ø–∞ "1$ = 92.45 —Ä—É–±"
                r'1\s*[=\-:]\s*(\d+[.,]\d+)\s*[‚ÇΩ—Ä—É–±]'
            ]
            
            for pattern in patterns:
                matches = re.findall(pattern, text, re.IGNORECASE)
                for match in matches:
                    try:
                        price_str = str(match).replace(' ', '').replace(',', '.')
                        price = float(price_str)
                        
                        # –ü—Ä–æ–≤–µ—Ä—è–µ–º —Ä–∞–∑—É–º–Ω—ã–π –¥–∏–∞–ø–∞–∑–æ–Ω (30-150 —Ä—É–±)
                        if 30 <= price <= 150:
                            return round(price, 2)
                    except (ValueError, AttributeError):
                        continue
            
            return None
            
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ –ø–∞—Ä—Å–∏–Ω–≥–∞ USD: {e}")
            return None
    
    def _parse_ton_response(self, text):
        """–ü–∞—Ä—Å–∏–Ω–≥ –æ—Ç–≤–µ—Ç–∞ –ø–æ TON"""
        try:
            # –ü–∞—Ç—Ç–µ—Ä–Ω—ã –¥–ª—è –ø–æ–∏—Å–∫–∞ —Ü–µ–Ω—ã TON –≤ –æ—Ç–≤–µ—Ç–µ –±–æ—Ç–∞
            patterns = [
                r'(\d+[.,]\d+)\s*‚ÇΩ.*[T–¢]–æ–Ω',
                r'[T–¢]–æ–Ω.*(\d+[.,]\d+)\s*‚ÇΩ',
                r'Toncoin.*(\d+[.,]\d+)\s*‚ÇΩ',
                r'(\d+[.,]\d+)\s*‚ÇΩ.*Toncoin',
                r'TON.*(\d+[.,]\d+)\s*‚ÇΩ',
                r'(\d+[.,]\d+)\s*‚ÇΩ.*TON',
                r'1\s*[T–¢—Ç].*?(\d+[.,]\d+)\s*‚ÇΩ',
                r'1\s*ton.*?(\d+[.,]\d+)\s*‚ÇΩ',
                # –î–ª—è –æ—Ç–≤–µ—Ç–æ–≤ —Ç–∏–ø–∞ "1—Ç = 130.50 —Ä—É–±"
                r'1\s*[=\-:]\s*(\d+[.,]\d+)\s*[‚ÇΩ—Ä—É–±].*?[T–¢]–æ–Ω',
                r'[T–¢]–æ–Ω.*?(\d+[.,]\d+)\s*[‚ÇΩ—Ä—É–±]'
            ]
            
            for pattern in patterns:
                matches = re.findall(pattern, text, re.IGNORECASE)
                for match in matches:
                    try:
                        price_str = str(match).replace(' ', '').replace(',', '.')
                        price = float(price_str)
                        
                        # –ü—Ä–æ–≤–µ—Ä—è–µ–º —Ä–∞–∑—É–º–Ω—ã–π –¥–∏–∞–ø–∞–∑–æ–Ω (10-1000 —Ä—É–±)
                        if 10 <= price <= 1000:
                            return round(price, 2)
                    except (ValueError, AttributeError):
                        continue
            
            return None
            
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ –ø–∞—Ä—Å–∏–Ω–≥–∞ TON: {e}")
            return None
    
    def _get_msk_time(self):
        """–ü–æ–ª—É—á–µ–Ω–∏–µ –≤—Ä–µ–º–µ–Ω–∏ –ø–æ –ú–°–ö"""
        utc_now = datetime.utcnow()
        msk_time = utc_now + timedelta(hours=3)
        return msk_time
    
    def _get_msk_time_str(self, timestamp=None):
        """–§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –≤—Ä–µ–º–µ–Ω–∏ –ú–°–ö"""
        if timestamp:
            utc_time = datetime.utcfromtimestamp(timestamp)
            msk_time = utc_time + timedelta(hours=3)
        else:
            msk_time = self._get_msk_time()
        
        return msk_time.strftime("%H:%M –ú–°–ö")
    
    def _format_number(self, number):
        """–§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ —á–∏—Å–ª–∞"""
        if isinstance(number, (int, float)):
            if number.is_integer():
                return f"{int(number):,}".replace(",", " ")
            else:
                # –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º —Å 2 –∑–Ω–∞–∫–∞–º–∏ –ø–æ—Å–ª–µ –∑–∞–ø—è—Ç–æ–π
                formatted = f"{number:,.2f}".replace(",", " ").replace(".", ",")
                return formatted
        return str(number)
    
    def _format_post(self, usd_price, ton_price):
        """–§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –ø–æ—Å—Ç–∞ –≤ –Ω—É–∂–Ω–æ–º —Ñ–æ—Ä–º–∞—Ç–µ"""
        # –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º —á–∏—Å–ª–∞
        usd_formatted = self._format_number(usd_price)
        ton_formatted = self._format_number(ton_price)
        
        # –ü–æ–ª—É—á–∞–µ–º –≤—Ä–µ–º—è –ú–°–ö
        msk_time = self._get_msk_time_str()
        
        # –§–æ—Ä–º–∏—Ä—É–µ–º –ø–æ—Å—Ç –¢–û–ß–ù–û –≤ —É–∫–∞–∑–∞–Ω–Ω–æ–º —Ñ–æ—Ä–º–∞—Ç–µ
        post = f"üíµ USD: <b>{usd_formatted}‚ÇΩ</b>\n"
        post += f"üíé TON: <b>{ton_formatted}‚ÇΩ</b>\n\n"
        post += f"<i>üïê {msk_time} | @priceDollarTon</i>"
        
        return post
    
    async def on_unload(self):
        """–û—á–∏—Å—Ç–∫–∞ –ø—Ä–∏ –≤—ã–≥—Ä—É–∑–∫–µ"""
        self.is_running = False
        
        if self.task:
            self.task.cancel()
