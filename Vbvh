# meta developer: @kiminaiq
# meta pic: https://img.icons8.com/color/48/000000/wallet--v1.png
# meta description: –ü–æ–ª—É—á–µ–Ω–∏–µ —Ü–µ–Ω –∏–∑ @wallet –∏ –ø—É–±–ª–∏–∫–∞—Ü–∏—è –≤ –∫–∞–Ω–∞–ª
# scope: hikka_only
# scope: hikka_min 1.6.0

import asyncio
import time
import re
from datetime import datetime, timedelta
from .. import loader, utils
import logging

logger = logging.getLogger(__name__)

@loader.tds
class WalletPriceParser(loader.Module):
    """–ü–∞—Ä—Å–∏–Ω–≥ —Ü–µ–Ω –∏–∑ @wallet –∏ –ø—É–±–ª–∏–∫–∞—Ü–∏—è –≤ –∫–∞–Ω–∞–ª"""
    
    strings = {
        "name": "WalletPriceParser",
        "started": "‚úÖ <b>–ë–æ—Ç –∑–∞–ø—É—â–µ–Ω!</b>\nüì• –ò—Å—Ç–æ—á–Ω–∏–∫: @wallet\nüì¢ –ö–∞–Ω–∞–ª: @priceDollarTon\n‚è± –ö–∞–∂–¥—ã–µ 3 –º–∏–Ω—É—Ç—ã",
        "stopped": "‚èπÔ∏è <b>–ë–æ—Ç –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω</b>",
        "already_running": "‚ö†Ô∏è <b>–ë–æ—Ç —É–∂–µ —Ä–∞–±–æ—Ç–∞–µ—Ç</b>",
        "not_running": "üì≠ <b>–ë–æ—Ç –Ω–µ –∑–∞–ø—É—â–µ–Ω</b>",
        "test_sent": "üì§ <b>–¢–µ—Å—Ç–æ–≤—ã–π –ø–æ—Å—Ç –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω</b>",
        "status": "üîÑ <b>–°—Ç–∞—Ç—É—Å:</b> {}\n‚è∞ <b>–ü–æ—Å–ª–µ–¥–Ω–µ–µ:</b> {}\nüíµ <b>USD:</b> {}‚ÇΩ\nüíé <b>TON:</b> {}‚ÇΩ",
        "error": "‚ùå <b>–û—à–∏–±–∫–∞:</b> {}",
        "updating": "üîÑ –ü–æ–ª—É—á–∞—é —Ü–µ–Ω—ã –∏–∑ @wallet...",
        "no_price": "–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö",
        "wallet_not_found": "‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–ª—É—á–∏—Ç—å –¥–∞–Ω–Ω—ã–µ –æ—Ç @wallet",
        "parsing_error": "‚ö†Ô∏è –û—à–∏–±–∫–∞ –ø–∞—Ä—Å–∏–Ω–≥–∞ –¥–∞–Ω–Ω—ã—Ö"
    }
    
    def __init__(self):
        self.task = None
        self.is_running = False
        self.last_update = None
        self.last_usd_price = None
        self.last_ton_price = None
        self.wallet_bot_id = "@wallet"
        self.target_channel = "@priceDollarTon"
    
    async def client_ready(self, client, db):
        self.client = client
        self.db = db
        logger.info("WalletPriceParser –∑–∞–≥—Ä—É–∂–µ–Ω")
    
    @loader.command(
        ru_doc="–ó–∞–ø—É—Å—Ç–∏—Ç—å –ø–∞—Ä—Å–∏–Ω–≥ –∏–∑ @wallet",
        en_doc="Start parsing from @wallet"
    )
    async def startwalletparse(self, message):
        """–ó–∞–ø—É—Å—Ç–∏—Ç—å –±–æ—Ç–∞"""
        if self.is_running:
            await utils.answer(message, self.strings("already_running"))
            return
        
        self.is_running = True
        self.task = asyncio.create_task(self._parsing_loop())
        
        await utils.answer(message, self.strings("started"))
        logger.info("–ü–∞—Ä—Å–µ—Ä –∑–∞–ø—É—â–µ–Ω")
    
    @loader.command(
        ru_doc="–û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –ø–∞—Ä—Å–∏–Ω–≥",
        en_doc="Stop parsing"
    )
    async def stopwalletparse(self, message):
        """–û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –±–æ—Ç–∞"""
        if not self.is_running:
            await utils.answer(message, self.strings("not_running"))
            return
        
        self.is_running = False
        if self.task:
            self.task.cancel()
            self.task = None
        
        await utils.answer(message, self.strings("stopped"))
        logger.info("–ü–∞—Ä—Å–µ—Ä –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω")
    
    @loader.command(
        ru_doc="–¢–µ—Å—Ç–æ–≤—ã–π –ø–∞—Ä—Å–∏–Ω–≥ –∏ –ø–æ—Å—Ç",
        en_doc="Test parsing and post"
    )
    async def testwalletparse(self, message):
        """–¢–µ—Å—Ç–æ–≤—ã–π –ø–∞—Ä—Å–∏–Ω–≥"""
        await utils.answer(message, self.strings("updating"))
        try:
            usd_price, ton_price = await self._get_prices_from_wallet()
            
            if usd_price and ton_price:
                post = self._format_post(usd_price, ton_price)
                
                # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –≤ –∫–∞–Ω–∞–ª
                await self.client.send_message(
                    self.target_channel,
                    post,
                    parse_mode='HTML'
                )
                
                # –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–µ–±–µ
                await utils.answer(message, self.strings("test_sent"))
                await message.respond(post, parse_mode='HTML')
            else:
                await utils.answer(message, self.strings("wallet_not_found"))
                
        except Exception as e:
            await utils.answer(message, self.strings("error").format(str(e)))
    
    @loader.command(
        ru_doc="–°—Ç–∞—Ç—É—Å –ø–∞—Ä—Å–µ—Ä–∞",
        en_doc="Parser status"
    )
    async def walletstatus(self, message):
        """–°—Ç–∞—Ç—É—Å"""
        status = "üü¢ –†–∞–±–æ—Ç–∞–µ—Ç" if self.is_running else "üî¥ –û—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω"
        
        last_time = "‚Äî"
        if self.last_update:
            last_time = self._get_msk_time_str(self.last_update)
        
        usd_info = f"{self.last_usd_price:.2f}‚ÇΩ" if self.last_usd_price else self.strings("no_price")
        ton_info = f"{self.last_ton_price:.2f}‚ÇΩ" if self.last_ton_price else self.strings("no_price")
        
        info = self.strings("status").format(status, last_time, usd_info, ton_info)
        await utils.answer(message, info)
    
    @loader.command(
        ru_doc="–ü—Ä–∏–Ω—É–¥–∏—Ç–µ–ª—å–Ω–æ–µ –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ",
        en_doc="Force update"
    )
    async def updatewallet(self, message):
        """–û–±–Ω–æ–≤–∏—Ç—å —Å–µ–π—á–∞—Å"""
        await utils.answer(message, self.strings("updating"))
        try:
            usd_price, ton_price = await self._get_prices_from_wallet()
            
            if usd_price and ton_price:
                post = self._format_post(usd_price, ton_price)
                await message.respond(post, parse_mode='HTML')
            else:
                await utils.answer(message, self.strings("wallet_not_found"))
                
        except Exception as e:
            await utils.answer(message, self.strings("error").format(str(e)))
    
    @loader.command(
        ru_doc="–†—É—á–Ω–æ–π –ø–æ—Å—Ç —Å —Ü–µ–Ω–∞–º–∏",
        en_doc="Manual post with prices"
    )
    async def postmanual(self, message):
        """–†—É—á–Ω–æ–π –ø–æ—Å—Ç <usd> <ton>"""
        args = utils.get_args(message)
        
        if len(args) < 2:
            await utils.answer(message, "‚ùå –§–æ—Ä–º–∞—Ç: .postmanual <usd_price> <ton_price>")
            return
        
        try:
            usd_price = float(args[0].replace(",", "."))
            ton_price = float(args[1].replace(",", "."))
            
            post = self._format_post(usd_price, ton_price)
            
            await self.client.send_message(
                self.target_channel,
                post,
                parse_mode='HTML'
            )
            
            await utils.answer(message, "‚úÖ –ü–æ—Å—Ç –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω")
            
        except ValueError:
            await utils.answer(message, "‚ùå –ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç —Ü–µ–Ω")
    
    async def _parsing_loop(self):
        """–û—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª –ø–∞—Ä—Å–∏–Ω–≥–∞"""
        while self.is_running:
            try:
                # –ü–æ–ª—É—á–∞–µ–º —Ü–µ–Ω—ã –∏–∑ @wallet
                usd_price, ton_price = await self._get_prices_from_wallet()
                
                if usd_price and ton_price:
                    # –°–æ—Ö—Ä–∞–Ω—è–µ–º —Ü–µ–Ω—ã
                    self.last_usd_price = usd_price
                    self.last_ton_price = ton_price
                    
                    # –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º –ø–æ—Å—Ç
                    post = self._format_post(usd_price, ton_price)
                    
                    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –≤ –∫–∞–Ω–∞–ª
                    await self.client.send_message(
                        self.target_channel,
                        post,
                        parse_mode='HTML'
                    )
                    
                    # –û–±–Ω–æ–≤–ª—è–µ–º –≤—Ä–µ–º—è
                    self.last_update = time.time()
                    
                    logger.info(f"–ü–æ—Å—Ç –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω | USD: {usd_price:.2f}‚ÇΩ, TON: {ton_price:.2f}‚ÇΩ")
                
                # –ñ–¥–µ–º 3 –º–∏–Ω—É—Ç—ã (180 —Å–µ–∫—É–Ω–¥)
                for i in range(180):
                    if not self.is_running:
                        break
                    await asyncio.sleep(1)
                    
            except Exception as e:
                logger.error(f"–û—à–∏–±–∫–∞ –≤ —Ü–∏–∫–ª–µ –ø–∞—Ä—Å–∏–Ω–≥–∞: {e}")
                await asyncio.sleep(30)
    
    async def _get_prices_from_wallet(self):
        """–ü–æ–ª—É—á–µ–Ω–∏–µ —Ü–µ–Ω –∏–∑ –±–æ—Ç–∞ @wallet"""
        try:
            # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –∫–æ–º–∞–Ω–¥—É /start –∏–ª–∏ –ø—É—Å—Ç–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ –±–æ—Ç—É @wallet
            await self.client.send_message(self.wallet_bot_id, "/start")
            
            # –ñ–¥–µ–º –æ—Ç–≤–µ—Ç–∞
            await asyncio.sleep(2)
            
            # –ü–æ–ª—É—á–∞–µ–º –ø–æ—Å–ª–µ–¥–Ω–∏–µ —Å–æ–æ–±—â–µ–Ω–∏—è –æ—Ç –±–æ—Ç–∞
            messages = await self.client.get_messages(self.wallet_bot_id, limit=5)
            
            for msg in messages:
                if msg.text:
                    usd_price = self._extract_usd_price(msg.text)
                    ton_price = self._extract_ton_price(msg.text)
                    
                    if usd_price and ton_price:
                        return usd_price, ton_price
            
            # –ï—Å–ª–∏ –Ω–µ –Ω–∞—à–ª–∏ –≤ –ø–æ—Å–ª–µ–¥–Ω–∏—Ö —Å–æ–æ–±—â–µ–Ω–∏—è—Ö, –ø—ã—Ç–∞–µ–º—Å—è –ø–æ–ª—É—á–∏—Ç—å —Å–≤–µ–∂–µ–µ
            await self.client.send_message(self.wallet_bot_id, "–∫—É—Ä—Å")
            await asyncio.sleep(2)
            
            messages = await self.client.get_messages(self.wallet_bot_id, limit=3)
            
            for msg in messages:
                if msg.text:
                    usd_price = self._extract_usd_price(msg.text)
                    ton_price = self._extract_ton_price(msg.text)
                    
                    if usd_price and ton_price:
                        return usd_price, ton_price
            
            return None, None
            
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ –ø–æ–ª—É—á–µ–Ω–∏—è –¥–∞–Ω–Ω—ã—Ö –∏–∑ @wallet: {e}")
            return None, None
    
    def _extract_usd_price(self, text):
        """–ò–∑–≤–ª–µ—á–µ–Ω–∏–µ —Ü–µ–Ω—ã USD –∏–∑ —Ç–µ–∫—Å—Ç–∞"""
        try:
            # –ü–∞—Ç—Ç–µ—Ä–Ω—ã –¥–ª—è –ø–æ–∏—Å–∫–∞ USD —Ü–µ–Ω—ã
            patterns = [
                r'USD[:\s]*([\d,]+\.?\d*)\s*‚ÇΩ',
                r'USD[:\s]*([\d,]+\.?\d*)\s*—Ä—É–±',
                r'–¥–æ–ª–ª–∞—Ä[:\s]*([\d,]+\.?\d*)\s*‚ÇΩ',
                r'\$[:\s]*([\d,]+\.?\d*)\s*‚ÇΩ',
                r'([\d,]+\.?\d*)\s*‚ÇΩ.*USD',
                r'([\d,]+\.?\d*)\s*—Ä—É–±.*USD'
            ]
            
            for pattern in patterns:
                match = re.search(pattern, text, re.IGNORECASE)
                if match:
                    price_str = match.group(1).replace(",", ".")
                    return float(price_str)
            
            return None
            
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ –ø–∞—Ä—Å–∏–Ω–≥–∞ USD: {e}")
            return None
    
    def _extract_ton_price(self, text):
        """–ò–∑–≤–ª–µ—á–µ–Ω–∏–µ —Ü–µ–Ω—ã TON –∏–∑ —Ç–µ–∫—Å—Ç–∞"""
        try:
            # –ü–∞—Ç—Ç–µ—Ä–Ω—ã –¥–ª—è –ø–æ–∏—Å–∫–∞ TON —Ü–µ–Ω—ã
            patterns = [
                r'Ton[:\s]*([\d,]+\.?\d*)\s*‚ÇΩ',
                r'Ton[:\s]*([\d,]+\.?\d*)\s*—Ä—É–±',
                r'Toncoin[:\s]*([\d,]+\.?\d*)\s*‚ÇΩ',
                r'TON[:\s]*([\d,]+\.?\d*)\s*‚ÇΩ',
                r'([\d,]+\.?\d*)\s*‚ÇΩ.*Ton',
                r'([\d,]+\.?\d*)\s*—Ä—É–±.*Ton'
            ]
            
            for pattern in patterns:
                match = re.search(pattern, text, re.IGNORECASE)
                if match:
                    price_str = match.group(1).replace(",", ".")
                    return float(price_str)
            
            return None
            
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ –ø–∞—Ä—Å–∏–Ω–≥–∞ TON: {e}")
            return None
    
    def _get_msk_time(self):
        """–ü–æ–ª—É—á–µ–Ω–∏–µ —Ç–µ–∫—É—â–µ–≥–æ –≤—Ä–µ–º–µ–Ω–∏ –ø–æ –ú–°–ö"""
        utc_now = datetime.utcnow()
        msk_time = utc_now + timedelta(hours=3)
        return msk_time
    
    def _get_msk_time_str(self, timestamp=None):
        """–ü–æ–ª—É—á–µ–Ω–∏–µ –≤—Ä–µ–º–µ–Ω–∏ –ú–°–ö –≤ —Å—Ç—Ä–æ–∫–æ–≤–æ–º —Ñ–æ—Ä–º–∞—Ç–µ"""
        if timestamp:
            utc_time = datetime.utcfromtimestamp(timestamp)
            msk_time = utc_time + timedelta(hours=3)
        else:
            msk_time = self._get_msk_time()
        
        return msk_time.strftime("%H:%M –ú–°–ö")
    
    def _format_number(self, number):
        """–§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ —á–∏—Å–ª–∞"""
        if number.is_integer():
            return f"{int(number):,}".replace(",", " ")
        else:
            return f"{number:,.2f}".replace(",", " ").replace(".", ",")
    
    def _format_post(self, usd_price, ton_price):
        """–§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –ø–æ—Å—Ç–∞"""
        # –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º —á–∏—Å–ª–∞
        usd_formatted = self._format_number(usd_price)
        ton_formatted = self._format_number(ton_price)
        
        # –ü–æ–ª—É—á–∞–µ–º –≤—Ä–µ–º—è –ú–°–ö
        msk_time = self._get_msk_time_str()
        
        # –§–æ—Ä–º–∏—Ä—É–µ–º –ø–æ—Å—Ç
        post = f"üíµ USD: <b>{usd_formatted}‚ÇΩ</b>\n"
        post += f"üíé TON: <b>{ton_formatted}‚ÇΩ</b>\n\n"
        post += f"<i>üïê {msk_time} | @priceDollarTon</i>\n"
        post += f"<i>üìä –ò—Å—Ç–æ—á–Ω–∏–∫: @wallet</i>"
        
        return post
    
    async def on_unload(self):
        """–û—á–∏—Å—Ç–∫–∞ –ø—Ä–∏ –≤—ã–≥—Ä—É–∑–∫–µ"""
        self.is_running = False
        
        if self.task:
            self.task.cancel()
