# meta developer: @kiminaiq
# meta pic: https://img.icons8.com/color/48/000000/money-bag.png
# meta description: –ü—É–±–ª–∏–∫–∞—Ü–∏—è –∫—É—Ä—Å–æ–≤ USD –∏ TON –≤ ‚ÇΩ –≤ –∫–∞–Ω–∞–ª @priceDollarTon (–≤—Ä–µ–º—è –ú–°–ö)
# scope: hikka_only
# scope: hikka_min 1.6.0

import aiohttp
import asyncio
import time
from datetime import datetime, timedelta
from .. import loader, utils
import logging

logger = logging.getLogger(__name__)

@loader.tds
class PricePosterMSK(loader.Module):
    """–ü—É–±–ª–∏–∫–∞—Ü–∏—è –∫—É—Ä—Å–æ–≤ USD –∏ TON –≤ ‚ÇΩ –≤ @priceDollarTon (–≤—Ä–µ–º—è –ú–°–ö)"""
    
    strings = {
        "name": "PricePosterMSK",
        "started": "‚úÖ <b>–ë–æ—Ç –∑–∞–ø—É—â–µ–Ω!</b>\nüì¢ –ö–∞–Ω–∞–ª: @priceDollarTon\n‚è± –ö–∞–∂–¥—ã–µ 3 –º–∏–Ω—É—Ç—ã\nüíµ USD ‚Üí RUB\nüíé TON ‚Üí RUB",
        "stopped": "‚èπÔ∏è <b>–ë–æ—Ç –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω</b>",
        "already_running": "‚ö†Ô∏è <b>–ë–æ—Ç —É–∂–µ —Ä–∞–±–æ—Ç–∞–µ—Ç</b>",
        "not_running": "üì≠ <b>–ë–æ—Ç –Ω–µ –∑–∞–ø—É—â–µ–Ω</b>",
        "test_sent": "üì§ <b>–¢–µ—Å—Ç–æ–≤—ã–π –ø–æ—Å—Ç –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω</b>",
        "status": "üîÑ <b>–°—Ç–∞—Ç—É—Å:</b> {}\n‚è∞ <b>–ü–æ—Å–ª–µ–¥–Ω–µ–µ:</b> {}\nüíµ <b>USD:</b> {}‚ÇΩ\nüíé <b>TON:</b> {}‚ÇΩ",
        "error": "‚ùå <b>–û—à–∏–±–∫–∞:</b> {}",
        "updating": "üîÑ –ü–æ–ª—É—á–∞—é –∫—É—Ä—Å—ã...",
        "no_price": "–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö"
    }
    
    def __init__(self):
        self.task = None
        self.is_running = False
        self.last_update = None
        self.session = None
        self.last_usd_price = None
        self.last_ton_usd_price = None  # –î–æ–±–∞–≤–∏–ª–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ —Ü–µ–Ω—ã TON –≤ USD
        self.last_ton_rub_price = None
    
    async def client_ready(self, client, db):
        self.client = client
        self.db = db
        self.session = aiohttp.ClientSession()
        logger.info("PricePosterMSK –∑–∞–≥—Ä—É–∂–µ–Ω")
    
    @loader.command(
        ru_doc="–ó–∞–ø—É—Å—Ç–∏—Ç—å –ø—É–±–ª–∏–∫–∞—Ü–∏—é —Ü–µ–Ω –≤ @priceDollarTon",
        en_doc="Start posting prices to @priceDollarTon"
    )
    async def startpricepostcmd(self, message):
        """–ó–∞–ø—É—Å—Ç–∏—Ç—å –±–æ—Ç–∞"""
        if self.is_running:
            await utils.answer(message, self.strings("already_running"))
            return
        
        self.is_running = True
        self.task = asyncio.create_task(self._posting_loop())
        
        await utils.answer(message, self.strings("started"))
        logger.info("–ë–æ—Ç –∑–∞–ø—É—â–µ–Ω")
    
    @loader.command(
        ru_doc="–û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –±–æ—Ç–∞",
        en_doc="Stop bot"
    )
    async def stoppricepostcmd(self, message):
        """–û—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –±–æ—Ç–∞"""
        if not self.is_running:
            await utils.answer(message, self.strings("not_running"))
            return
        
        self.is_running = False
        if self.task:
            self.task.cancel()
            self.task = None
        
        await utils.answer(message, self.strings("stopped"))
        logger.info("–ë–æ—Ç –æ—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω")
    
    @loader.command(
        ru_doc="–¢–µ—Å—Ç–æ–≤—ã–π –ø–æ—Å—Ç",
        en_doc="Test post"
    )
    async def testpostcmd(self, message):
        """–¢–µ—Å—Ç–æ–≤—ã–π –ø–æ—Å—Ç"""
        await utils.answer(message, self.strings("updating"))
        try:
            usd_rub, ton_usd, ton_rub = await self._get_all_prices()
            
            if usd_rub and ton_usd and ton_rub:
                post = self._format_post(usd_rub, ton_usd, ton_rub)
                
                # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –≤ –∫–∞–Ω–∞–ª
                await self.client.send_message(
                    "@priceDollarTon",
                    post,
                    parse_mode='HTML'
                )
                
                # –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–µ–±–µ
                await utils.answer(message, self.strings("test_sent"))
                await message.respond(post, parse_mode='HTML')
            else:
                await utils.answer(message, "‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–ª—É—á–∏—Ç—å –∫—É—Ä—Å—ã")
                
        except Exception as e:
            await utils.answer(message, self.strings("error").format(str(e)))
    
    @loader.command(
        ru_doc="–°—Ç–∞—Ç—É—Å –±–æ—Ç–∞",
        en_doc="Bot status"
    )
    async def pricestatuscmd(self, message):
        """–°—Ç–∞—Ç—É—Å"""
        status = "üü¢ –†–∞–±–æ—Ç–∞–µ—Ç" if self.is_running else "üî¥ –û—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω"
        
        last_time = "‚Äî"
        if self.last_update:
            last_time = self._get_msk_time_str(self.last_update)
        
        usd_info = f"{self.last_usd_price:.2f}‚ÇΩ" if self.last_usd_price else self.strings("no_price")
        ton_info = f"{self.last_ton_rub_price:.2f}‚ÇΩ" if self.last_ton_rub_price else self.strings("no_price")
        
        if self.last_ton_usd_price:
            ton_info += f" (${self.last_ton_usd_price:.4f})"
        
        info = self.strings("status").format(status, last_time, usd_info, ton_info)
        await utils.answer(message, info)
    
    @loader.command(
        ru_doc="–û–±–Ω–æ–≤–∏—Ç—å —Å–µ–π—á–∞—Å",
        en_doc="Update now"
    )
    async def updatepricescmd(self, message):
        """–û–±–Ω–æ–≤–∏—Ç—å"""
        await utils.answer(message, self.strings("updating"))
        try:
            usd_rub, ton_usd, ton_rub = await self._get_all_prices()
            
            if usd_rub and ton_usd and ton_rub:
                post = self._format_post(usd_rub, ton_usd, ton_rub)
                await message.respond(post, parse_mode='HTML')
            else:
                await utils.answer(message, "‚ùå –û—à–∏–±–∫–∞ –ø–æ–ª—É—á–µ–Ω–∏—è –¥–∞–Ω–Ω—ã—Ö")
                
        except Exception as e:
            await utils.answer(message, self.strings("error").format(str(e)))
    
    async def _posting_loop(self):
        """–û—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª –ø—É–±–ª–∏–∫–∞—Ü–∏–∏"""
        while self.is_running:
            try:
                # –ü–æ–ª—É—á–∞–µ–º –≤—Å–µ —Ü–µ–Ω—ã
                usd_rub, ton_usd, ton_rub = await self._get_all_prices()
                
                if usd_rub and ton_usd and ton_rub:
                    # –°–æ—Ö—Ä–∞–Ω—è–µ–º –¥–ª—è —Å—Ç–∞—Ç—É—Å–∞
                    self.last_usd_price = usd_rub
                    self.last_ton_usd_price = ton_usd
                    self.last_ton_rub_price = ton_rub
                    
                    # –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º –ø–æ—Å—Ç
                    post = self._format_post(usd_rub, ton_usd, ton_rub)
                    
                    # –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –≤ –∫–∞–Ω–∞–ª
                    await self.client.send_message(
                        "@priceDollarTon",
                        post,
                        parse_mode='HTML'
                    )
                    
                    # –û–±–Ω–æ–≤–ª—è–µ–º –≤—Ä–µ–º—è
                    self.last_update = time.time()
                    
                    logger.info(f"–ü–æ—Å—Ç –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω | USD: {usd_rub:.2f}‚ÇΩ, TON: {ton_rub:.2f}‚ÇΩ (${ton_usd:.4f})")
                
                # –ñ–¥–µ–º 3 –º–∏–Ω—É—Ç—ã (180 —Å–µ–∫—É–Ω–¥)
                for i in range(180):
                    if not self.is_running:
                        break
                    await asyncio.sleep(1)
                    
            except Exception as e:
                logger.error(f"–û—à–∏–±–∫–∞ –≤ —Ü–∏–∫–ª–µ: {e}")
                await asyncio.sleep(30)
    
    async def _get_all_prices(self):
        """–ü–æ–ª—É—á–µ–Ω–∏–µ –≤—Å–µ—Ö –∫—É—Ä—Å–æ–≤"""
        try:
            # –ü–æ–ª—É—á–∞–µ–º USD/RUB
            usd_rub = await self._get_usd_rub()
            
            # –ü–æ–ª—É—á–∞–µ–º TON/USD
            ton_usd = await self._get_ton_usd()
            
            if usd_rub and ton_usd:
                # –ö–æ–Ω–≤–µ—Ä—Ç–∏—Ä—É–µ–º TON –≤ RUB
                ton_rub = ton_usd * usd_rub
                return usd_rub, ton_usd, ton_rub
            
            return None, None, None
            
        except Exception as e:
            logger.error(f"–û—à–∏–±–∫–∞ –ø–æ–ª—É—á–µ–Ω–∏—è —Ü–µ–Ω: {e}")
            return None, None, None
    
    async def _get_usd_rub(self):
        """–ü–æ–ª—É—á–µ–Ω–∏–µ –∫—É—Ä—Å–∞ USD/RUB"""
        sources = [
            "https://api.frankfurter.app/latest?from=USD&to=RUB",
            "https://api.exchangerate-api.com/v4/latest/USD",
            "https://api.currencyapi.com/v3/latest?apikey=cur_live_123&currencies=RUB&base_currency=USD"
        ]
        
        for url in sources:
            try:
                async with self.session.get(url, timeout=5) as response:
                    if response.status == 200:
                        data = await response.json()
                        
                        # –ò–∑–≤–ª–µ–∫–∞–µ–º –∫—É—Ä—Å –≤ –∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏ –æ—Ç API
                        if "frankfurter" in url:
                            return data['rates']['RUB']
                        elif "exchangerate-api" in url:
                            return data['rates']['RUB']
                        elif "currencyapi" in url:
                            return data['data']['RUB']['value']
            except:
                continue
        
        return None
    
    async def _get_ton_usd(self):
        """–ü–æ–ª—É—á–µ–Ω–∏–µ –∫—É—Ä—Å–∞ TON/USD"""
        sources = [
            ("https://api.binance.com/api/v3/ticker/price?symbol=TONUSDT", "binance"),
            ("https://api.coingecko.com/api/v3/simple/price?ids=the-open-network&vs_currencies=usd", "coingecko"),
            ("https://api.bybit.com/v5/market/tickers?category=spot&symbol=TONUSDT", "bybit")
        ]
        
        for url, source in sources:
            try:
                async with self.session.get(url, timeout=5) as response:
                    if response.status == 200:
                        data = await response.json()
                        
                        if source == "binance":
                            return float(data['price'])
                        elif source == "coingecko":
                            return data['the-open-network']['usd']
                        elif source == "bybit":
                            return float(data['result']['list'][0]['lastPrice'])
            except:
                continue
        
        return None
    
    def _get_msk_time(self):
        """–ü–æ–ª—É—á–µ–Ω–∏–µ —Ç–µ–∫—É—â–µ–≥–æ –≤—Ä–µ–º–µ–Ω–∏ –ø–æ –ú–°–ö"""
        # –ú–°–ö = UTC+3
        utc_now = datetime.utcnow()
        msk_time = utc_now + timedelta(hours=3)
        return msk_time
    
    def _get_msk_time_str(self, timestamp=None):
        """–ü–æ–ª—É—á–µ–Ω–∏–µ –≤—Ä–µ–º–µ–Ω–∏ –ú–°–ö –≤ —Å—Ç—Ä–æ–∫–æ–≤–æ–º —Ñ–æ—Ä–º–∞—Ç–µ"""
        if timestamp:
            utc_time = datetime.utcfromtimestamp(timestamp)
            msk_time = utc_time + timedelta(hours=3)
        else:
            msk_time = self._get_msk_time()
        
        return msk_time.strftime("%H:%M –ú–°–ö")
    
    def _format_number(self, number):
        """–§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ —á–∏—Å–ª–∞"""
        if number.is_integer():
            return f"{int(number):,}".replace(",", " ")
        else:
            return f"{number:,.2f}".replace(",", " ").replace(".", ",")
    
    def _format_post(self, usd_rub, ton_usd, ton_rub):
        """–§–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ –ø–æ—Å—Ç–∞ –≤ –Ω—É–∂–Ω–æ–º —Ñ–æ—Ä–º–∞—Ç–µ"""
        # –§–æ—Ä–º–∞—Ç–∏—Ä—É–µ–º —á–∏—Å–ª–∞
        usd_formatted = self._format_number(usd_rub)
        ton_formatted = self._format_number(ton_rub)
        
        # –ü–æ–ª—É—á–∞–µ–º –≤—Ä–µ–º—è –ú–°–ö
        msk_time = self._get_msk_time_str()
        
        # –§–æ—Ä–º–∏—Ä—É–µ–º –ø–æ—Å—Ç
        post = f"üíµ USD: <b>{usd_formatted}‚ÇΩ</b>\n"
        post += f"üíé TON: <b>{ton_formatted}‚ÇΩ</b>\n\n"
        post += f"<i>üïê {msk_time} | @priceDollarTon</i>"
        
        # –î–ª—è –æ—Ç–ª–∞–¥–∫–∏ –º–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å —Ü–µ–Ω—É TON –≤ USD –≤ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π
        # post += f"\n<code>TON/USD: ${ton_usd:.4f}</code>"
        
        return post
    
    async def on_unload(self):
        """–û—á–∏—Å—Ç–∫–∞ –ø—Ä–∏ –≤—ã–≥—Ä—É–∑–∫–µ"""
        self.is_running = False
        
        if self.task:
            self.task.cancel()
        
        if self.session:
            await self.session.close()
